  <div class="form-group">

    <div id="radio-animal" class="form-check ">
      <div class="btn-destination-child">
        <div class="form-check">
          <input checked class="form-check-input destination" type="radio" name="requisition[destination]"
            value="Bovinos">
          <label class="radio-text form-check-label mr-3">Gado de Leite</label>
        </div>
      </div>


      <div class="btn-destination-child">
        <div class="form-check">
          <input checked class="form-check-input destination" type="radio" name="requisition[destination]"
            value="Bovinos">
          <label class="radio-text form-check-label mr-3">Gado de Corte</label>
        </div>
      </div>





      <div class="btn-destination-child">
        <div class="form-check">
          <input id="Pig" class="form-check-input destination" type="radio" name="requisition[destination]"
            value="Suínos">
          <label class="radio-text form-check-label  mr-3">Suínos</label>
        </div>
      </div>


      <div class="btn-destination-child">
        <div class="form-check">
          <input id="Pig" class="form-check-input destination" type="radio" name="requisition[destination]"
            value="Suínos">
          <label class="radio-text form-check-label  mr-3">Aves</label>
        </div>
      </div>





      <div class="btn-destination-child">
        <div class="form-check">
          <input id="Horse" class="form-check-input destination" type="radio" name="requisition[destination]"
            value="Equinos">
          <label class="radio-text form-check-label mr-3">Equinos</label>
        </div>
      </div>

      <div class="btn-destination-child">
        <div class="form-check">
          <input id="Goat" class="form-check-input destination" type="radio" name="requisition[destination]"
            value="Caprinos">
          <label class="radio-text form-check-label mr-3">Caprinos</label>
        </div>
      </div>
      <div class="btn-destination-child">
        <div class="form-check">
          <input id="Sheep" class="form-check-input destination" type="radio" name="requisition[destination]"
            value="Ovinos">
          <label class="radio-text form-check-label mr-3">Ovinos</label>
        </div>
      </div>


      <div class="btn-destination-child">
        <div class="form-check">
          <input id="Sheep" class="form-check-input destination" type="radio" name="requisition[destination]"
            value="Ovinos">
          <label class="radio-text form-check-label mr-3">Matéria-Prima(Fábrica de Ração)</label>
        </div>
      </div>


      <div class="btn-destination-child">
        <div class="form-check">
          <input id="Fish" class="form-check-input destination" type="radio" name="requisition[destination]"
            value="Peixes">
          <label class="radio-text form-check-label mr-3">Peixes</label>
        </div>
      </div>



      <div class="btn-destination-child">
        <div class="form-check">
          <input id="Pet" class="form-check-input destination" type="radio" name="requisition[destination]" value="Pet">
          <label class="radio-text form-check-label mr-3">Pet</label>
        </div>
      </div>
      <br><br>


      <div class="btn-destination">
        <div class="form-check">
          <input id="Others" class="form-check-input destination" type="radio" name="requisition[destination]" value="">
          <label class="radio-text form-check-label mr-3">Outros</label>
        </div>
      </div>
    </div>
  </div>

  <div id="Other-destination" class="form-disabled form-row">
    <input type="text" name="requisition[destination]" class="requisition-text col-md-2" placeholder="Outros">
  </div>

  {{#if nova}}
    <div class="col-sm-6">
      <input type="checkbox" id="novaCheckId" name="novaCheck" value="isChecked"></input>
      <label for="novaCheckId">Aprovar requisição</label>
    </div>
  {{/if}}
  <div class="text-center">
    <button type="submit" align="center" class="btn btn-outline-success">Enviar Alterações</button>
  </div>
</form>
