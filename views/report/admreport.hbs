<h4> Amostras </h4>
<p></p>
<div class="table-responsive">
  <table id="tb-user" class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Identificação</th>
        <th>Finalização</th>
        <th>Laudos</th>
      </tr>
    </thead>
    <tbody>
    {{#each laudos}}
      <tr>
      <th>{{samplenumber}}/{{creationYear}}</th>
      {{#if finalized}}
        <th>Disponível para o produtor</th>
      {{else}}
        <th>Não finalizado</th>
      {{/if}}
      <th>
          <a href="../../report/show/admin/{{_id}}"><button class="btn btn-success">Editar laudo {{samplenumber}}/{{creationYear}}</button></a>
      </th>
    </tr>
    {{/each}}
    </tbody>
  </table>
</div>
