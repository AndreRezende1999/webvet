<h4> Amostras </h4>
<p></p>
<div class="table-responsive">
  <table id="tb-user" class="table table-striped table-hover">
    <thead>
      <tr>
        <th class = "th-name">Identificação</th>
        <th class = "th-action">Laudos</th>
      </tr>
    </thead>
    <tbody>
    {{#each laudos}}
      <tr>
      <th>{{responsible}}</th>
      <th>
        {{#if report}}
          <a href="../../report/show/{{_id}}"><button class="btn btn-success">Disponível</button></a>
        {{else}}
          <button class="btn btn-danger">Não Disponível</button>
        {{/if}}
      </th>
    </tr>
    {{/each}}
    </tbody>
  </table>
</div>
