<div class="col-sm-fluid container-fluid">
  <h4>Cálculos de amostra</h4>
</div>

<div class="container-fluid d-flex justify-content-between flex-wrap">
  {{#each resultados}}
    <table>
      <thead>
        <tr>
          <th class="" scope="col">{{name}}</th>
          <th class="absorbance px-2" scope="col">Média abs</th>
          <th class="absorbance px-2" scope="col">Resultado</th>
        </tr>
      </thead>

      <tbody>
        {{#each result}}
          {{#if changed_workmap}}
            <tr>
              <td><br></td>
            </tr>
          {{/if}}
          <tr>
            <th scope="row">{{number}}</th>
            <td><input readonly type="text" class="input-absorbance" value="{{average}}"></td>
            <td><input readonly type="text" class="input-absorbance" value="{{compara}}"></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{/each}}
</div>