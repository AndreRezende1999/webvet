<form action="/allworkmaps" method="post">

  <div class="col-sm-fluid container-fluid">
    <h4>Mapas de Trabalho</h4>
  </div>

  <div class="container-fluid d-flex justify-content-between flex-wrap">
    {{#each result}}
      <table>
        <thead>
          <tr>
            <th class="" scope="col">{{name}}</th>
            <th class="absorbance px-2" scope="col">Absorv√¢ncia</th>
          </tr>
        </thead>

        <tbody>
          {{#each samples}}
            {{#if changedworkmap}}
              <tr>
                <td><br></td>
              </tr>
            {{/if}}
            <tr>
              <th>{{samplenumber}}</th>
              <div class="some">
                <input name="sample[{{../name}}][_id]" type="text" value="{{_id}}">
              </div>
              <th>
                <input type="text" name="sample[{{../name}}][absorbance]" class="input-absorbance">
                <input type="text" name="sample[{{../name}}][absorbance2]" class="input-absorbance">
              </th>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{/each}}
  </div>

  <div class="btn-group-justified col-sm-12 container-fluid">
    <div class="btn btn-back">
      <a href="/queue" class="btn btn-success" id="test">Voltar</a>
    </div>
    <div class="btn btn-abs">
      <button class="btn btn-success">Finalizar</button>
    </div>
  </div>
</form>