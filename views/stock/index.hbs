<h4>Kits Disponíveis</h4>
<div class="text-right">
  <form action="/stock/new" method="get">
      <button type="submit" id="btn-new-sample-stock" class="btn btn-primary btn-sm">Novo Kit</button>
  </form>
</div>
<p></p>
<div class="table-responsive">
  <table id="tb-user" class="table table-striped table-hover">
    <thead>
      <tr>
        <th class = "th-name">Código Produto</th>
        <th class = "th-type">Tipo</th>
        <th class = "th-type">Descrição</th>
        <th class = "th-type">Validade</th>
        <th class = "th-type">Quantidade</th>
        <th class = "th-action"></th>
      </tr>
    </thead>
    <tbody>
      {{#each kit30}}
        {{#compare deleted '0'}}
          <tr>
            <th>{{productCode}}</th>
            <th>{{kitType}}</th>
            <th>{{productDescription}}</th>
            <th>
              <div class="expirationDateRed">
                {{dayexpirationDate}}/{{monthexpirationDate}}/{{yearexpirationDate}}
              </div>




            <th>{{amount}}</th>

            <th>
              <button onClick="location.href='stock/show/{{_id}}'" class="fa fa-info btn m-1"></button>
            </th>
          </tr>
        {{/compare}}
      {{/each}}

      {{#each kit60}}
        {{#compare deleted '0'}}
          <tr>
            <th>{{productCode}}</th>
            <th>{{kitType}}</th>
            <th>{{productDescription}}</th>
            <th>
              <div class="expirationDateYellow">

              {{dayexpirationDate}}/{{monthexpirationDate}}/{{yearexpirationDate}}
            </div>

            <th>{{amount}}</th>

            <th>
              <button onClick="location.href='stock/show/{{_id}}'" class="fa fa-info btn m-1"></button>
            </th>
          </tr>
        {{/compare}}
      {{/each}}


      {{#each kit90}}
        {{#compare deleted '0'}}
          <tr>
            <th>{{productCode}}</th>
            <th>{{kitType}}</th>
            <th>{{productDescription}}</th>
            <th>
              <div class="expirationDateGreen">

                {{dayexpirationDate}}/{{monthexpirationDate}}/{{yearexpirationDate}}

            <th>{{amount}}</th>

            <th>
              <button onClick="location.href='stock/show/{{_id}}'" class="fa fa-info btn m-1"></button>
            </th>
          </tr>
        {{/compare}}
      {{/each}}





    </tbody>
  </table>



</div>
