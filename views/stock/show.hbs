<div class="">
    <div class="">
      <br>
      <div class="row">
        <form class="col-2" action="/stock" method="get">
            <button type="submit" class="btn btn-outline-success">Voltar</button>
        </form>
        <div class="col-8">
          <font color="gray" size="5">{{kit.productCode}} ({{kit.kitType}})
        </div>
        <form class="col-2" action="/stock/delete/{{kit._id}}" method="post">
            <button type="submit" class="btn btn-outline-danger">Apagar</button>
        </form>
      </div>
      <hr color="lightgray">
      <form class="showboxinfo" action="/stock/edit/{{kit._id}}" method="get" >
        <p><font size="4" color="black">Descrição do Produto: {{kit.productDescription}}</p>
        <p><font size="4" color="black">Quantidade em Estoque: {{kit.amount}}</p>
        <p><font size="4" color="black">Situação: {{kit.status}} </p>
        <p><font size="4" color="black">Lod: {{kit.Lod}}</p>
        <p><font size="4" color="black">Loq: {{kit.Loq}}</p>
        <p><font size="4" color="black">Fornecedor: {{kit.provider}}</p>
        <p><font size="4" color="black">Validade:{{kit.dayexpirationDate}}/{{kit.monthexpirationDate}}/{{kit.yearexpirationDate}}</p>
        <p><font size="4" color="black">Estoque Mínimo: {{kit.stockMin}}</p>
        <p><font size="4" color="red" name="kit[status]"></p>
        <p><font size="4" color="black">Estoque Mínimo: {{kit.calibrators.P5}}</p>
        <div class="text-center">
          <button type=submit class="btn btn-outline-success">Editar</button>
        </div>
      </form>
    </div>
  </div>
