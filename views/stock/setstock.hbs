<h4>Configuração de estoques mínimos</h4>

<form action="/stock/setstock" method="post">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="th-name">Toxina</th>
                <th class="th-type">Estoque Minimo Atual</th>
                <th class="th-action">Novo Estoque Mínimo</th>
            </tr>
        </thead>
        <tbody>
            {{#each kitstocks}}
                <tr>
                    <th>{{name}}</th>
                    <th>{{minStock}}</th>
                    <th>
                        <input type="text" class="text-center" style="width: 90px" name={{name}} />
                    </th>
                </tr>
            {{/each}}
        </tbody>
    </table>
    <div class="container-fluid">
      <div class="row">
        <div class="text-center align-center col-sm-6" id="btn-addkit">
          <a href="/stock" id="btn-new-sample-stock"
            class="btn btn-success">Voltar</a>
        </div>
        <div class="text-center align-center col-sm-6" id="btn-addkit">
          <button type="submit" class="btn btn-outline-success">Enviar Alterações</button>
        </div>
      </div>
    </div>
</form>

