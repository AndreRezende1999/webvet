<div class="requisition" >
  <h4 align="center"> Cadastro de Novo Kit</h4>
</div>

<form action="/stock/new" method="post">
  <div class="new-kit">
      <div class="form-row">
        <div class="Addkit-text col-md-7">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Dropdown</button>
              <div class="dropdown-menu">
                <a class="dropdown-item" href="#">Action</a>
                <a class="dropdown-item" href="#">Another action</a>
                <a class="dropdown-item" href="#">Something else here</a>
                <div role="separator" class="dropdown-divider"></div>
                <a class="dropdown-item" href="#">Separated link</a>
              </div>
            </div>
          </div>
        <input type="text" name="kit[productCode]" class="addkit-input" placeholder="Código do Produto:">
        </div>
        <div class="Addkit-text col-md-2">
          <input type="text" name="kit[amount]" class="addkit-input" placeholder="Quantidade:">
        </div>
        <div class="Addkit-text col-3">
          <input type="text" name="kit[stockMin]" class="addkit-input" placeholder="Estoque Minimo:">
        </div>
      </div>
      <div class="form-row">
        <div class="Addkit-text col-5">
          <input type="text" name="kit[productDescription]" class="addkit-input" placeholder="Descrição do Produto:">
        </div>
        <div class="Addkit-text col-2">
          <input class="addkit-input" type="text" name="kit[Lod]" placeholder="Lod:">
        </div>
        <div class="Addkit-text col-2">
          <input class="addkit-input" type="text" name="kit[Loq]" placeholder="LoQ:">
        </div>
        <div class="Addkit-text col-1">
         <input placeholder="Validade:"  class="addkit-input" type="text" name="kit[dayexpirationDate]">
        </div>
        <div class="Addkit-text col-1">
         <input placeholder="/" type="text" class="addkit-input" name="kit[monthexpirationDate]" >
        </div>
        <div class="Addkit-text col-1">
         <input placeholder="/" type="text"  name="kit[yearexpirationDate]" class="addkit-input">
        </div>
      </div>
      <div class="form-row">
        <div class="Addkit-text col-7">
          <input class="addkit-input" type="text" name="kit[provider]" placeholder="Fornecedor:">
        </div>
        <div class="Addkit-text col-1">
          <input class="addkit-input" type="text" name="kit[calibrators][P1]" placeholder="P1:">
        </div>
        <div class="Addkit-text col-1">
          <input class="addkit-input" type="text" name="kit[calibrators][P2]" placeholder="P2:">
        </div>
        <div class="Addkit-text col-1">
         <input class="addkit-input" type="text" name="kit[calibrators][P3]" placeholder="P3:">
        </div>
        <div class="Addkit-text col-1">
         <input class="addkit-input" type="text" name="kit[calibrators][P4]" placeholder="P4:">
        </div>
        <div class="Addkit-text col-1">
         <input class="addkit-input" type="text" name="kit[calibrators][P5]" placeholder="P5:">
        </div>
      </div>
      <div id="radio-kit" class="form-check">
        <div class="form-check form-check-inline">
          <input checked class="form-check-input" type="radio" name="kit[kitType]" value="A">
          <label class="form-check-label">A</label>
        </div>
        <div class="form-check form-check-inline">
          <input checked class="form-check-input" type="radio" name="kit[kitType]" value="B">
          <label class="form-check-label">B</label>
        </div>
        <div class="form-check form-check-inline">
          <input checked class="form-check-input" type="radio" name="kit[kitType]" value="C">
          <label class="form-check-label">C</label>
        </div>
        <div class="form-check form-check-inline">
          <input checked class="form-check-input" type="radio" name="kit[kitType]" value="D">
          <label class="form-check-label">D</label>
        </div>
        <div class="form-check form-check-inline">
          <input checked class="form-check-input" type="radio" name="kit[kitType]" value="E">
          <label class="form-check-label">E</label>
        </div>
        <div class="form-check form-check-inline">
          <input checked class="form-check-input" type="radio" name="kit[kitType]" value="F">
          <label class="form-check-label">F</label>
        </div>
       </div>
       <div class="text-center" id="btn-addkit">
          <button type="submit" class="btn btn-outline-success">Criar novo kit</button>
        </div>
    </div>
  </form>
