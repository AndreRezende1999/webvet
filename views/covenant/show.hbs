<div>
    <h2>{{covenant.name}}</h2>
    <h3>Lista de Gerentes:</h3>
    {{#each managers}}
        <h4>{{fullname}}</h4>
        <table id="tb-user" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th class="th-name">Status</th>
                    <th class="th-name">Email</th>
                    <th class="th-name">Telefone</th>
                    <th class="th-name">Celular</th>
                    <th class="th-name">Registro</th>
                    <th class="th-name">Produtores</th>
                    <th class="th-name">Remover</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>{{status}}</th>
                    <th>{{email}}</th>
                    <th>{{phone}}</th>
                    <th>{{cellphone}}</th>
                    <th>{{register}}</th>
                    <th>
                        {{#each associatedProducers}}
                            <p>{{this}}</p>
                        {{/each}}
                    </th>
                    <th>
                        <form action="/user/removeFromCovenant/{{_id}}" method="post">
                            <input value="{{covId}}" name="covenant[id]" hidden="hidden"/>
                            <button type="submit" class="fa fa-trash btn btn-default m-1" aria-hidden="true"/>
                        </form>
                    </th>
                </tr>
            </tbody>
        </table>
    {{/each}}
</div>

<div>
    <h3>Adicionar Gerente - {{covenant.name}}:</h3>
    <form action="/covenant/addManagers" method="post" class="d-flex flex-column align-items-center">
        <div class="requisition-text col-md-12 d-flex align-items-center">
            <select multiple id="requisitonstate" class="drowdownoptions" name="managers" required="required">
                <option disabled selected value="">Gerentes</option>
                {{#each allManagers}}
                    <option value="{{_id}}">{{fullname}} - {{type}} - {{email}}</option>
                {{/each}}
            </select>
        </div>
        <div class="btn-enviar">
            <button type="submit" class="btn btn-success">Enviar</button>
        </div>
    </form>
</div>