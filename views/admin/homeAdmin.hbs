
  <div id="kits" class="dashboard-item">
    <div class="dashboard-header"><h5 class="pt-2"> Notificações </h5> </div>
  </div>



  {{#each outofStockArray}}
  <div class="alertaa">
    <div class="alert  alert-danger alert-dismissible fade show" role="alert">
      O kit <strong>{{productCode}}</strong> tem o estoque mínimo de <strong>{{stockMin}}</strong> e a quantidade atual é <strong>{{amount}}</strong> .
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
  {{/each}}



  {{#each vencidos}}
  <div class="alertaa">
    <div class="alert  alert-danger alert-dismissible fade show" onclick="location.href='/stock/show/{{_id}}'" role="alert">
      O kit <strong>{{productCode}}</strong> venceu em <strong>{{dayexpirationDate}}/{{monthexpirationDate}}/{{yearexpirationDate}}</strong> .
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <!-- <button type="button" data-dismiss="alert" onclick="location.href='/stock/show/{{_id}}'">
        <span aria-hidden="true">&times;</span>
      </button> -->
    </div>
  </div>
  {{/each}}







<div class="dashboard-container">
  <div id="samples" class="dashboard-counter">
    <div class="dashboard-number">{{countSamples}}</div>
    <div class="dashboard-label">Amostras</div>
  </div>

  <div id="analysis" class="dashboard-counter">
    <div class="dashboard-number">{{countRequisitions}}</div>
    <div class="dashboard-label">Análises</div>
  </div>

  <div id="clients" class="dashboard-counter">
    <div class="dashboard-number">{{countClients}}</div>
    <div class="dashboard-label">Clientes</div>
  </div>


</div>
