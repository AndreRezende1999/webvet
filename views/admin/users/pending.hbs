<h4>Requisição de Usuário</h4>
<p></p>
<div class="table-responsive">
  <table id="tb-user" class="table table-striped table-hover">
    <thead>
      <tr>
        <th class = "th-name">Nome</th>
        <th class = "th-action">Ação</th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
        {{#compare status 'Aguardando aprovação'}}
          <tr>
            <th>{{fullname}}</th>
            <th>
              <div class="d-flex flex-row justify-content-center">
                <button onClick="location.href='show/{{_id}}/pending'" class="fa fa-info btn m-1"></button>
                <form action="/users/approve/{{_id}}" method="post">
                    <button type="submit" class="fa fa-thumbs-up btn btn-success m-1"></button>
                </form>
                <form action="/users/reject/{{_id}}" method="post">
                    <button type="submit" class="fa fa-thumbs-down btn btn-danger m-1"></button>
                </form>
                <form action="/users/block/{{_id}}" method="post">
                    <button type="submit" class="fa fa-ban btn btn-default m-1" aria-hidden="true"></button>
                </form>
              </div>
            </th>
          </tr>
        {{/compare}}
      {{/each}}
    </tbody>
  </table>
</div>
