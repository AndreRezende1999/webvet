<h4>Lista de Usu√°rios</h4>
<p></p>
<div class="table-responsive">
  <table id="tb-user" class="table table-striped table-hover">
    <thead>
      <tr>
        <th class="th-name">Nome</th>
        <th class="th-type">Tipo</th>
        <th class="th-dept">Pag</th>
        <th class="th-action"></th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
        <tr>
          <th>{{fullname}}</th>
          <th>{{type}}</th>
          <th>
            {{#if debt}}
              <form action="/users/approvepayment/{{_id}}" method="post">
                <button type="submit" class="btn btn-danger" style="height: 20px;"></button>
              </form>
            {{else}}
              <form action="/users/approvepayment/{{_id}}" method="post">
                <button type="submit" class="btn btn-success" style="height: 20px;"></button>
              </form>
            {{/if}}
          </th>
          <th>
            <button onClick="location.href='/users/show/{{_id}}/%20'" class="fa fa-info btn m-1"></button>
          </th>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>