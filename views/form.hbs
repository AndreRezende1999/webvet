<img class="img">
<form class="signup-box" action="/signup" method="post">
  <div class="signup">
    <h1> Formulário de Cadastro</h1>
    <div>
        <div class="signup-text col-md-12">
          <input type="text" name="user[fullname]" class="input-placeholder-green" placeholder="Nome Completo">
        </div>
        <div class="form-row">
          <div class="signup-text col-md-6">
            <input type="email" name="user[email]" class="input-placeholder-green" placeholder="Email">
          </div>
          <div class="signup-text col-md-3">
            <input type="text" name="user[cellphone]" class="input-placeholder-green" placeholder="Celular">
          </div>
          <div class="signup-text col-md-3">
            <input type="text" name="user[phone]" class="input-placeholder-green" placeholder="Telefone">
          </div>
        </div>
        <div class="signup-text col-md-12">
          <input type="password" name="user[password]" class="input-placeholder-green" placeholder="Senha">
        </div>
        <br>
        <div class="form-row">
          <div class="form-check form-check-inline">
            <p>
              <input class="form-check-input position-static" type="radio" name="user[persontype]" value="0">
              <label class="form-check-label">CPF</label>
              <input class="form-check-input position-static" type="radio" name="user[persontype]" value="1">
              <label class="form-check-label">CNPJ</label>
            </p>
          </div>
          <div class="signup-text col-md-10">
            <input type="text" name="user[register]" class="input-placeholder-green" placeholder="CPF ou CNPJ">
          </div>
        </div>
        <div class="form-row">
          <div class="signup-text col-md-6">
            <input type="text" name="user[address][city]" class="input-placeholder-green" placeholder="Municipio">
          </div>
          <div class="signup-text col-md-2">
            <input type="text" name="user[address][state]" class="input-placeholder-green" placeholder="Estado">
          </div>
          <div class="signup-text col-md-4">
            <input type="text" name="user[address][cep]" class="input-placeholder-green" placeholder="CEP">
          </div>
          <div class="signup-text col-md-4">
            <input type="text" name="user[address][street]" class="input-placeholder-green" placeholder="Rua">
          </div>
          <div class="signup-text col-md-3">
            <input type="text" name="user[address][number]" class="input-placeholder-green" placeholder="Número">
          </div>
          <div class="signup-text col-md-3">
            <input type="text" name="user[address][complement]" class="input-placeholder-green" placeholder="Complemento">
          </div>
          <div class="signup-text col-md-2">
            <input type="text" name="user[address][neighborhood]" class="input-placeholder-green" placeholder="Bairro">
          </div>
        </div>
      </div>
    <br>
    <button type="submit" class="btn-signup">Cadastrar</button>
  </div>
</form>
